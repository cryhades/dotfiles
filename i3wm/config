
#---Principal

set 	$mod 	Mod4
font 	pango:DS-Digital

#---Lock
exec --no-startup-id betterlockscreen -w dim

# Alternative (set last used background)
exec 	--no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
# NetworkManager

exec 	--no-startup-id nm-applet

#---Feh

exec_always 	feh 	--randomize --bg-fill ~/.wall/nyar/*
#---Picom

exec 	picom 	-b -f

#---Polybar

exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod


#---------------------------------------------------------------------------------------------------------------------------------------------#
#------------------------------------------------------------------VARIABLES------------------------------------------------------------------#

#-------------------------------------------------------VARIABLES-FOR-DUAL-WORKSPACES---------------------------------------------------------#

set 	$ws1L 	"1"
set 	$ws1R 	"2"
set 	$ws2L 	"3"
set 	$ws2R 	"4"
set 	$ws3L 	"5"
set 	$ws3R 	"6"
set 	$ws4L 	"7"
set 	$ws4R 	"8"
set 	$ws5L 	"9"
set 	$ws5R 	"10"	

#-----------------------------------------------------------------WORKSPACES------------------------------------------------------------------#

set 	$ws1 	"1"
set 	$ws2 	"2"
set 	$ws3 	"3"
set 	$ws4 	"4"
set 	$ws5 	"5"
set 	$ws6 	"6"
set 	$ws7 	"7"
set 	$ws8 	"8"
set 	$ws9 	"9"
set 	$ws10 	"10"

#-----------------------------------------------------------------PULSE-AUDIO-----------------------------------------------------------------#

set 		$refresh_i3status 	killall 	-SIGUSR1 i3status

#----------------------------------------------------------------COLORS-----------------------------------------------------------------------#

set 	$colorPrimary 		#ffb200
set 	$colorPrimaryDark 	#ff8000
set 	$colorSecondary 	#ff6500
set 	$colorSecondaryDark 	#ff4e00

#---------------------------------------------------------------------------------------------------------------------------------------------#
#----------------------------------------------------------------GAPS-------------------------------------------------------------------------#

for_window 	[class=".*"] 	border pixel 1

gaps 	inner 	8
gaps 	outer 	4

#---------------------------------------------------------------------------------------------------------------------------------------------#
#---------------------------------------------------------------MODES-------------------------------------------------------------------------#

#---------------------------------------------------------------RESIZE------------------------------------------------------------------------#


mode "resize" {
        bindsym 	Left 		resize shrink 		width 1 px or 1 ppt
        bindsym 	Down 		resize grow 		height 1 px or 1 ppt
        bindsym 	Up 		resize shrink 		height 1 px or 1 ppt
        bindsym 	Right 		resize grow 		width 1 px or 1 ppt

        bindsym 	Return 		mode 			"default"
        bindsym 	Escape 		mode 			"default"
        bindsym 	$mod+r 		mode 			"default"
}

#--------------------------------------------------------------Launcher-----------------------------------------------------------------------#

mode "launcher" {
        bindsym 	f 		exec 		firefox
	bindsym 	c 		exec 		google-chrome-stable
	bindsym 	d 		exec 		firefox-developer-edition

        bindsym 	Escape 		mode 		"default"
	bindsym 	Return 		mode 		"default"
}


#---------------------------------------------------------------------------------------------------------------------------------------------#
#---------------------------------------------------------------Shortkeys---------------------------------------------------------------------#

#---Brightness

#bindsym XF86MonBrightnessUp 	exec 	xbacklight -inc %10
#bindsym XF86MonBrightnessDown 	exec 	xbacklight - 10

#---------------------------------------------------------------------------------------------------------------------------------------------#
#---PulseAudio.

bindsym XF86AudioRaiseVolume 	exec --no-startup-id pactl set-sink-volume 	@DEFAULT_SINK@ +1% && 		$refresh_i3status
bindsym XF86AudioLowerVolume 	exec --no-startup-id pactl set-sink-volume 	@DEFAULT_SINK@ -1% && 		$refresh_i3status
bindsym XF86AudioMute 		exec --no-startup-id pactl set-sink-mute 	@DEFAULT_SINK@ toggle && 	$refresh_i3status
bindsym XF86AudioMicMute 	exec --no-startup-id pactl set-source-mute 	@DEFAULT_SOURCE@ toggle && 	$refresh_i3status

